{
  "name": "calendar17",
  "displayName": "Calendar 17",
  "description": "Interactive Calendar",
  "publisher": "UsefullCode",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/yduf/Calendar.git"
  },
  "version": "0.0.4",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [ "Snippets", "Other"  ],
  "keywords": ["calendar", "date picker", "productivity", "forms", "input"],
  "activationEvents": [  
    "onLanguage:markdown",
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Calendar",
      "properties": {
        "calendar.dateFormat": {
          "type": "string",
          "default": "default",
          "description": "The format to use for dates. Use 'default' to automatically detect the format from the document or use system locale, or 'ISO' for YYYY-MM-DD."
        },
        "calendar.enabledLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "markdown",
            "plaintext",
            "javascript",
            "typescript"
          ],
          "description": "Languages where date recognition is enabled."
        },
        "calendar.ambiguityResolution": {
          "type": "string",
          "enum": [
            "DMY",
            "MDY"
          ],
          "default": "DMY",
          "description": "How to resolve ambiguous dates like 01/02/2023 (Day-Month-Year vs Month-Day-Year)."
        }
      }
    },
    "commands": [
      {
        "command": "calendar.insertDate",
        "title": "Insert Date from Calendar"
      },
      {
        "command": "calendar.editDate",
        "title": "Edit Date"
      }
    ],
    "snippets": [
      { "language": "markdown", "path": "./snippets/date.json" },
      { "language": "plaintext", "path": "./snippets/date.json" }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
